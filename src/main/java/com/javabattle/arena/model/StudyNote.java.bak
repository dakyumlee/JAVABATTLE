package com.javabattle.arena.model;

import jakarta.persistence.*;
import java.time.LocalDateTime;

@Entity
@Table(name = "STUDY_NOTES")
public class StudyNote {

    @Id
    @Column(name = "NOTE_ID")
    @GeneratedValue(strategy = GenerationType.SEQUENCE, generator = "study_note_seq")
    @SequenceGenerator(name = "study_note_seq", sequenceName = "STUDY_NOTE_SEQ", allocationSize = 1)
    private Long noteId;

    @Column(name = "USER_ID", nullable = false)
    private Long userId;

    @Column(name = "TITLE", nullable = false, length = 200)
    private String title;

    @Column(name = "CONTENT", nullable = false, columnDefinition = "CLOB")
    private String content;

    @Column(name = "TAGS", length = 500)
    private String tags;

    @Column(name = "CREATED_AT")
    private LocalDateTime createdAt;

    @Column(name = "CATEGORY", length = 50)
    private String category;
    
    @Column(name = "DIFFICULTY_LEVEL")
    private Integer difficultyLevel;
    
    @Column(name = "IS_FAVORITE")
    private Boolean isFavorite = false;

    @PrePersist
    protected void onCreate() {
        createdAt = LocalDateTime.now();
    }

    public StudyNote() {}

    public StudyNote(Long userId, String title, String content, String category) {
        this.userId = userId;
        this.title = title;
        this.content = content;
        this.category = category;
    }

    public Long getNoteId() { return noteId; }
    public void setNoteId(Long noteId) { this.noteId = noteId; }

    public Long getId() { return noteId; }
    public void setId(Long id) { this.noteId = id; }

    public Long getUserId() { return userId; }
    public void setUserId(Long userId) { this.userId = userId; }

    public String getTitle() { return title; }
    public void setTitle(String title) { this.title = title; }

    public String getContent() { return content; }
    public void setContent(String content) { this.content = content; }

    public String getCategory() { return category; }
    public void setCategory(String category) { this.category = category; }

    public String getTags() { return tags; }
    public void setTags(String tags) { this.tags = tags; }

    public Integer getDifficultyLevel() { return difficultyLevel; }
    public void setDifficultyLevel(Integer difficultyLevel) { this.difficultyLevel = difficultyLevel; }

    public Boolean getIsFavorite() { return isFavorite; }
    public void setIsFavorite(Boolean isFavorite) { this.isFavorite = isFavorite; }

    public LocalDateTime getCreatedAt() { return createdAt; }
    public void setCreatedAt(LocalDateTime createdAt) { this.createdAt = createdAt; }

    public LocalDateTime getUpdatedAt() { return createdAt; }
    public void setUpdatedAt(LocalDateTime updatedAt) {}
}