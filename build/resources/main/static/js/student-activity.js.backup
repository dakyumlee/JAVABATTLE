    }
    
    const userAnswer = parseInt(selectedOption.value);
    const isCorrect = userAnswer === correctAnswer;
    
    const resultMessage = isCorrect ? 'ì •ë‹µì…ë‹ˆë‹¤! ğŸ‰' : 'í‹€ë ¸ìŠµë‹ˆë‹¤. ì •ë‹µì€ ' + (correctAnswer + 1) + 'ë²ˆì…ë‹ˆë‹¤.';
    
